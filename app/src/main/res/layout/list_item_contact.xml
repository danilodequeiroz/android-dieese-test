<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="6dp"
    android:background="@drawable/radius_shape">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="6dp"
        android:id="@+id/list_item_img_contact_letter"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/list_item_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTACT_NAME"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/list_item_img_contact_letter"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/textitemblack"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/list_item_contact_sub"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="CONTACT_SOMETHING"
        android:layout_below="@+id/list_item_contact_name"
        android:gravity="top|left"
        android:textColor="@color/textsubitemblack"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/list_item_img_contact_letter"
        android:layout_marginBottom="6dp"
        />

</RelativeLayout>